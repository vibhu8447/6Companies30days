    string amendSentence (string s)
    {
        // your code herestring 
        string ans="";
        int k;
        for(int i=0;i<s.size();i++){
            if(isupper(s[i])){
                s[i]=tolower(s[i]);
                if(i!=0)ans+=" ";
            }
            ans+=s[i];
        }
        return ans;
    }